- content_for :title do
  Corsego 
  |
  Course
  = @course.title
  |
  Editing Lesson
  = @lesson.title

= link_to 'Courses', courses_path
|
= link_to course_path(@course) do
  .fa.fa-graduation-cap
  = @course.title
|
= link_to course_lesson_path(@course, @lesson) do
  .fa.fa-check-square
  = @lesson.title
|
= link_to 'Edit Lesson', edit_course_lesson_path(@course, @lesson)

.card
  .card-header
    %h3
      .far.fa-check-square
      Editing lesson
  .card-body
    = render 'form'
  .card-footer
    = link_to 'Show lesson', course_lesson_path(@course, @lesson)
    \|
    = link_to 'Back to course', course_path(@lesson.course)